# Copia este archivo a .env y completa los valores reales
# Se usa automáticamente por WowDash/settings.py

# Clave Django (solo desarrollo)
DJANGO_SECRET_KEY=dev-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=*

# URL de base de datos (usa la MISMA URL que tu despliegue si quieres apuntar a esa DB)
# Formato típico PostgreSQL:
# postgres://USUARIO:CONTRASENA@HOST:PUERTO/NOMBRE?sslmode=require
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Orígenes confiables para CSRF (agrega el host/puerto donde ejecutarás el servidor)
# Ejemplos: https://localhost:8000,https://127.0.0.1:8000
CSRF_TRUSTED_ORIGINS=https://localhost:8000

# Puerto donde correr el servidor en local (usado por Procfile u otros scripts)
PORT=8000
